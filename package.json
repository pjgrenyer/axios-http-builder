{
    "name": "@pjgrenyer/axios-http-builder",
    "version": "1.0.2",
    "description": "An axios instance builder for use on client or server side with common features pre-configured:",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "engines": {
        "npm": ">=8.11.0",
        "node": ">=16.15.1"
    },
    "scripts": {
        "clean": "rimraf dist",
        "build": "npm run clean && tsc",
        "postbuild": "cpy '**/*' '!**/*.ts' '!**/*.tsx' ../dist/ --cwd=src/ --no-overwrite --parents",
        "test": "npx jest --coverage --detectOpenHandles",
        "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts' './*.json' './*.js' './*.mjs'",
        "lint": "eslint --fix",
        "prepare": "husky"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pjgrenyer/axios-http-builder.git"
    },
    "keywords": [
        "http-client"
    ],
    "author": "Paul Grenyer",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/pjgrenyer/axios-http-builder/issues"
    },
    "homepage": "https://github.com/pjgrenyer/axios-http-builder#readme",
    "devDependencies": {
        "@babel/preset-env": "^7.25.4",
        "@babel/preset-typescript": "^7.24.7",
        "@eslint/js": "^9.11.1",
        "@eslint/plugin-kit": "^0.2.3",
        "@types/jest": "^29.5.13",
        "cpy-cli": "^5.0.0",
        "cross-spawn": "^7.0.6",
        "eslint": "^9.11.1",
        "globals": "^15.9.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "nock": "^13.5.5",
        "prettier": "^3.3.3",
        "rimraf": "^6.0.1",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.8.0"
    },
    "dependencies": {
        "axios": "^1.7.9"
    }
}
